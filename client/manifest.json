{
    "manifest_version": 3,
    "name": "Krishna's sidepanel",
    "version": "1.1",
    "author" : "kamathk@uchicago.edu",
    "description": "Saatva.com Side Panel .",
    "background": {
        "service_worker": "service-worker.js"
      },
    "action": {
      "default_title": "Click to open panel"
    },
    "side_panel" : {
        "default_path": "src/sidepanel/index.html"
    },
    "permissions": ["sidePanel", "tabs", "notifications", "scripting", "geolocation"],
    "host_permissions": [
      "https://www.saatva.com/*"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        }
      }
    }
}